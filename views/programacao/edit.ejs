<div class="card">
    <div class="card-header">
        <h2>Cadastro de Programação</h2>
    </div>

    <div class="card-body card-padding">
      <form method="post" action="/programacao/update">
        <input type="text" hidden name="id" value="<%= programacao.id %>">
        <div class="form-group fg-float">
            <div class="fg-line">
                <input type="text" class="form-control fg-input" name="nome" value="<%= programacao.nome %>">
                <label class="fg-label">Nome</label>
            </div>
        </div>

        <div class="form-group fg-float">
            <div class="fg-line">
                <div>
                    <p class="f-500 c-black m-b-15">Etapa</p>
                    <select class="chosen" style="display: none;" name="etapa">
                      <% _.each(etapas, function(etapa){ %>
                        <% if ( programacao.etapa == etapa.id ) {%>
                          <option value="<%=etapa.id %>" selected><%=etapa.descricao %></option>
                        <%}else{%>
                          <option value="<%=etapa.id %>"><%=etapa.descricao %></option>
                        <%}%>
                      <%})%>
                    </select>
                </div>
            </div>
        </div>

        <div class="form-group fg-float">
            <div class="fg-line">
                <div>
                    <p class="c-black f-500 m-b-20">Data</p>
                    <div class="input-group form-group">
                        <span class="input-group-addon"><i class="zmdi zmdi-calendar"></i></span>
                            <div class="dtp-container fg-line">
                            <input type="text" class="form-control input-mask" data-mask="00/00/0000" maxlength="10" autocomplete="off" name="data" value="<%= moment.utc(programacao.data).format('DD/MM/YYYY') %>">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group fg-float">
            <div class="fg-line">
                <div>
                    <p class="c-black f-500 m-b-20">Hora</p>
                    <div class="input-group form-group">
                        <span class="input-group-addon"><i class="zmdi zmdi-calendar"></i></span>
                            <div class="dtp-container fg-line">
                            <input type="text" class="form-control input-mask" data-mask="00:00:00" placeholder="ex: 23:06:55" maxlength="8" autocomplete="off" name="hora" value="<%= programacao.hora %>">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group fg-float">
            <div class="fg-line">
                <div>
                    <p class="f-500 c-black m-b-15">TV</p>
                    <select class="chosen" style="display: none;" name="tv">
                      <% _.each(tvs, function(tv){ %>
                        <% if ( programacao.tv == tv.id ) {%>
                          <option value="<%=tv.id %>" selected><%=tv.nome %></option>
                        <%}else{%>
                          <option value="<%=tv.id %>"><%=tv.nome %></option>
                        <%}%>
                      <%})%>
                    </select>
                </div>
            </div>
        </div>

        <div class="form-group">
          <div class="col-md-10 col-md-offset-2">
          <a class="btn btn-default btn-lg waves-effect" href="/programacao">Cancelar</a>
          <button class="btn palette-Teal btn-lg bg waves-effect" type="submit">Salvar</button>
          </div>
        </div>
      </form>
      <br>
    </div>
</div>