<div class="card">
    <div class="card-header">
        <h2>Cadastro de tv</h2>
    </div>

    <div class="card-body card-padding">
      <form method="post" action="/tv/update">
        <input type="text" hidden name="id" value="<%= tv.id %>">
        <div class="form-group fg-float">
            <div class="fg-line">
                <input type="text" class="form-control fg-input" name="nome" value="<%= tv.nome %>">
                <label class="fg-label">Nome</label>
            </div>    
        </div>

        <div class="form-group fg-float">
            <div class="fg-line">
                <input type="text" class="form-control fg-input" name="logo" value="<%= tv.logo %>">
                <label class="fg-label">Logo</label>
            </div>    
        </div>

        <div class="form-group fg-float">
            <div class="fg-line">
                <input type="text" class="form-control fg-input" name="url" value="<%= tv.url %>">
                <label class="fg-label">URL</label>
            </div>
        </div>
        <div class="form-group">
          <div class="col-md-10 col-md-offset-2">
          <a class="btn btn-default btn-lg waves-effect" href="/tv">Cancelar</a>
          <button class="btn palette-Teal btn-lg bg waves-effect" type="submit">Salvar</button>
          </div>
        </div>
      </form>
      <br>
    </div>
</div>