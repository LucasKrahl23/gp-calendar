<div class="card">
    <div class="card-header">
        <h2>Cadastro de Pilotos</h2>
    </div>

    <div class="card-body card-padding">
      <form method="post" action="/piloto/create">
        
        <div class="form-group fg-float">
            <div class="fg-line">
                <input type="text" class="form-control fg-input" name="nome">
                <label class="fg-label">Nome</label>
            </div>
        </div>

        <div class="form-group fg-float">
            <div class="fg-line">
                <p class="f-500 c-black m-b-15">Pa√≠s</p>
                <select class="chosen" style="display: none;" name="pais">
                  <% _.each(paises, function(pais){ %>
                    <option value="<%=pais.alpha2.toLowerCase() %>"><%=pais.langen %></option>
                  <%})%>
                </select>
            </div>
        </div>
        
        <div class="form-group fg-float">
            <div class="fg-line">
                <div>
                    <p class="c-black f-500 m-b-20">Data de Nascimento</p>
                    <div class="input-group form-group">
                        <span class="input-group-addon"><i class="zmdi zmdi-calendar"></i></span>
                            <div class="dtp-container fg-line">
                            <input type="text" class="form-control input-mask" data-mask="00/00/0000" maxlength="10" autocomplete="off" name="dtnascimento">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
          <div class="col-md-10 col-md-offset-2">
          <a class="btn btn-default btn-lg waves-effect" href="/piloto">Cancelar</a>
          <button class="btn palette-Teal btn-lg bg waves-effect" type="submit">Salvar</button>
          </div>
        </div>
      </form>
      <br>
    </div>
</div>