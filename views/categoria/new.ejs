<div class="card">
    <div class="card-header">
        <h2>Cadastro de categoria</h2>
    </div>

    <div class="card-body card-padding">
      <form method="post" action="/categoria/create">
        <div class="form-group fg-float">
            <div class="fg-line">
                <input type="text" class="form-control fg-input" name="nome">
                <label class="fg-label">Nome</label>
            </div>
        </div>

        <div class="form-group">
          <div class="col-md-10 col-md-offset-2">
          <button class="btn btn-default btn-lg waves-effect" onclick="window.location.replace('/categoria')">Cancelar</button>
          <button class="btn palette-Teal btn-lg bg waves-effect" type="submit">Salvar</button>
          </div>
        </div>
      </form>
      <br>
    </div>
</div>