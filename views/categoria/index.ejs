<div class="card">
    <div class="card-header">
      <table>
        <tr>
          <td>
            <h2>Cadastro de Categoria <small>Categorias de corridas</small></h2>    
          </td>
          <td style="text-align: right;">
            <a href="/categoria/new" class="btn palette-Light-Green bg btn-float waves-effect waves-circle"><i class="zmdi zmdi-plus"></i></a>
          </td>
        </tr>
      </table>
    </div>

    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th colspan="2">Ações</th>
                </tr>
            </thead>
            <tbody>
              <% _.each(categorias, function(categoria){ %>
                <tr>
                    <td><%=categoria.nome%></td>
                    <td width="1px">
                      <a href="/categoria/edit/<%=categoria.id%>" class="btn palette-Light-Blue btn-icon bg waves-effect waves-circle waves-float">
                        <i class="zmdi zmdi-edit"></i>
                      </a>
                    </td>
                    <td width="1px">
                      <button class="btn palette-Deep-Orange btn-icon bg waves-effect waves-circle waves-float" id="sa-<%=categoria.id%>">
                        <i class="zmdi zmdi-delete"></i>
                      </button>

                      <script type="text/javascript">
                      $(document).ready(function() {
                        //Warning Message
                          $('#sa-<%=categoria.id%>').click(function(){
                              swal({
                                  title: "Atenção!",
                                  text: "Deseja realmente excluir o registro?",
                                  type: "warning",
                                  showCancelButton: true,
                                  confirmButtonColor: "#DD6B55",
                                  confirmButtonText: "Sim, excluir!",
                                  closeOnConfirm: false
                              }, function(isConfirm){
                                  if (isConfirm) {
                                    window.location.replace("/categoria/destroy/<%=categoria.id%>");
                                  }
                              });
                          });
                        });
                      </script>
                    </td>
                </tr>
              <%})%>
            </tbody>
        </table>
    </div>
</div>